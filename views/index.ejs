<%- include('partials/header.ejs') %>
<body>
    <%- include('partials/homeNavBar.ejs')  %> 
    <div class="container" style="margin-top: 15px;">
        <div class="jumbotron">
            <h1 class="display-4">Bem-vindo</h1>
            <p class="lead">Este é um simples blog desenvolvido por mim</p>
            <hr class="my-4">
            <p>Descrição bem bonita</p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Leia mais</a>
        </div>
        <% articles.forEach(article => { %>  
            <div class="card">
                <hr>
                <div class="card-header">
                    <h2><%= article.title %> </h2>
                </div>
                <div class="card-body">
                    <a href="/<%=article.slug %> " class="btn btn-success">Ler artigo</a>
                </div>
            </div>
        <% }) %> 
    </div>
</body>
<%- include('partials/footer.ejs') %>